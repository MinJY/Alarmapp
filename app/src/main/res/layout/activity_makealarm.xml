<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF"
                android:gravity="center"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/savebutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#FFFFFFFF"
                android:gravity="center"
                android:textColor="#000000"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#242425"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selecttime"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"/>

            <!--
            <TextView
                android:id="@+id/selectday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF" />
            -->


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#58617B"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/feel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="교감 미션"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <com.rey.material.widget.Switch
                android:id="@+id/feelbutton"
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:gravity="center"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/feeltalk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/feelbutton"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/rabbit" />

                    <TextView
                        android:id="@+id/firsttalk"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="@mipmap/nonoline"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/secondtalk"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="@mipmap/nonoline2"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/myphoto"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="나"
                        android:background="@drawable/whitefullcircle" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/buttonslayout">

            <ToggleButton
                android:id="@+id/sunday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="일"
                android:textOff="일"/>

            <ToggleButton
                android:id="@+id/monday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="월"
                android:textOff="월"/>

            <ToggleButton
                android:id="@+id/tuesday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="화"
                android:textOff="화"/>

            <ToggleButton
                android:id="@+id/wednesday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="수"
                android:textOff="수"/>

            <ToggleButton
                android:id="@+id/thursday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="목"
                android:textOff="목"/>

            <ToggleButton
                android:id="@+id/friday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="금"
                android:textOff="금"/>

            <ToggleButton
                android:id="@+id/saturday"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/togglebutton_day"
                android:textOn="토"
                android:textOff="토"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/toneLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/alarmtext"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="알람 소리"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/alarmsound"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/alarmtext"
                android:layout_toRightOf="@id/alarmtext"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:text="Good Morning"
                android:textSize="12sp"
                android:textColor="#8f8f8f"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:src="@mipmap/musicset"/>

        </RelativeLayout>

        <com.rey.material.widget.Slider
            style="@style/Material.Widget.Slider"
            android:id="@+id/alarmvolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="알림시 진동"
                android:textColor="#000000"/>


            <com.rey.material.widget.Switch
                android:id="@+id/notibutton"
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:layout_marginTop="15dp"
                android:gravity="center" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/repeatLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/repeattext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="다시 알림"
                android:textColor="#000000"/>


            <com.rey.material.widget.Switch
                android:id="@+id/repeatbutton"
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:gravity="center"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/repeatminute"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/repeattext"
                android:layout_toRightOf="@+id/repeattext"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:text="12분"
                android:textSize="12sp"
                android:textColor="#8f8f8f"/>

        </RelativeLayout>


    </LinearLayout>
</ScrollView>